# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/todo_nestjs
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT
JWT_ACCESS_SECRET=change-me-to-random-256-bit-key
JWT_REFRESH_SECRET=change-me-to-random-256-bit-key
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Provider (choose one)
# Option 1: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Option 2: SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# SMTP_SECURE=true

# Email Settings
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=TodoApp
EMAIL_REPLY_TO=support@example.com

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (production only)
# REDIS_URL=redis://localhost:6379

# Dev Only - Reversible Passwords
ENABLE_DEV_REVERSIBLE_PASSWORDS=false
# DEV_REVERSIBLE_PASSWORD_KEY=base64-encoded-32-byte-key

# Monitoring
ENABLE_METRICS=false
# METRICS_AUTH_TOKEN=optional-bearer-token

# Logging
LOG_LEVEL=info
