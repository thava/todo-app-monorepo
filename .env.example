# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/todo_nestjs
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT
JWT_ACCESS_SECRET=change-me-to-random-256-bit-key
JWT_REFRESH_SECRET=change-me-to-random-256-bit-key
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Provider (choose one)
# Option 1: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Option 2: SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# SMTP_SECURE=true

# Email Settings
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=TodoApp
EMAIL_REPLY_TO=support@example.com

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (production only)
# REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=false
# METRICS_AUTH_TOKEN=optional-bearer-token

# Logging
LOG_LEVEL=info

# Note: DEMO variables are not set in production.

# For use by NestJS backend util scripts to setup demo
DEMO_DOMAIN='mydomain.com'
DEMO_PASSWORD='mypassword'
DEMO_USERS='guest1,admin1,sysadmin1,guest2,admin2,sysadmin2'

# For Next.js Demo only setup
NEXT_PUBLIC_DEMO_DOMAIN='mydomain.com'
NEXT_PUBLIC_DEMO_PASSWORD='mypassword'
NEXT_PUBLIC_DEMO_USERS='guest1,admin1,sysadmin1,guest2,admin2,sysadmin2'

# For Astro Demo only setup
PUBLIC_DEMO_DOMAIN='mydomain.com'
PUBLIC_DEMO_PASSWORD='mypassword'
PUBLIC_DEMO_USERS='guest1,admin1,sysadmin1,guest2,admin2,sysadmin2'

